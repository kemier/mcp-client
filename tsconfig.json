{
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"target": "ES2020",
		"outDir": "out",
		"lib": [
			"ESNext"
		],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"allowJs": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"baseUrl": ".",
		"paths": {
			"@modelcontextprotocol/sdk/*": ["./node_modules/@modelcontextprotocol/sdk/dist/esm/*"]
		},
		"types": [
			"node",
			"mocha"
		]
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}
