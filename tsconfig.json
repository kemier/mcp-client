{
	"compilerOptions": {
		"module": "Node16",
		"moduleResolution": "node16",
		"target": "ES2020",
		"outDir": "out",
		"lib": [
			"ESNext"
		],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"types": [
			"node",
			"mocha"
		]
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}
